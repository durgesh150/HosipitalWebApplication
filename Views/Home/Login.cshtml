@model HosipitalWebApplication.Migration.Appuser
@{
    ViewBag.Title = "Login";
}


<div class="container py-5 h-100 ">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
            <div class="card" style="border-radius: 1rem;">
                <div class="row g-0 bg-secondary bg-opacity-25 bgcolor ">
                    <div class="col-md-6 col-lg-5 d-none d-md-block">
                        <img src="~/Content/images/login_hospital1.jpg"
                             alt="login form" class="img-fluid h-100" style="border-radius: 1rem 0 0 1rem;" />
                    </div>
                    <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 mb-0 text-black">
                            <span class="h1 fw-bold mb-0 text-orange">Orion Hospitals</span>

                            <div class="d-flex align-items-center mb-3 pb-1">
                                <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                            </div>

                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form radius" }))
                            {
                                @*@Html.ValidationSummary(true)*@
                                <div class="form-outline mb-4">
                                    @Html.LabelFor(m => m.Username, "UserName", new { @class = "" })
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg" })
                                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline mb-4">
                                    @Html.LabelFor(m => m.password, "Password", new { @class = "" })
                                    @Html.PasswordFor(m => m.password, new { @class = "form-control form-control-lg" })
                                    @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                                    @ViewBag.errormessage
                                    <span class="text-danger">@Session["Invalid"] </span>

                                </div>

                                <div class="pt-1 mb-4">
                                    <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                </div>
                                @*<a class="small text-muted" href="@Url.Action("updatepassword","dashboard")">Forgot password?</a>*@
                                <a href="#!" class="small text-muted">Terms of use.</a>
                                <a href="#!" class="small text-muted">Privacy policy</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section validation{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
